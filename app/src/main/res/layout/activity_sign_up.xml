<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFF0F5"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-170dp"
            app:layout_constraintBottom_toTopOf="@+id/emailSignIn"
            tools:srcCompat="@drawable/top_background1" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:text="Create\nAccount"
            android:textColor="@color/colorApp"
            android:layout_marginLeft="16dp"
            android:textSize="40dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13sp"
            android:layout_marginTop="10sp"
            android:layout_marginRight="13sp"
            android:background="@drawable/shape"
            android:orientation="vertical"
            android:padding="15sp">

            <EditText
                android:id="@+id/fullNameSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorApp"
                android:hint="Full Name"
                android:inputType="text"
                android:padding="10sp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/emailSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorApp"
                android:hint="E-mail"
                android:inputType="textEmailAddress"
                android:padding="10sp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/cinSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:drawableStart="@drawable/ic_cin"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorApp"
                android:hint="CIN"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/phoneSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:drawableStart="@drawable/ic_phone"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorApp"
                android:hint="phone"
                android:inputType="number"
                android:padding="10sp"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/passwordSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10sp"
                android:drawableStart="@drawable/password"
                android:drawablePadding="10dp"
                android:drawableTint="@color/colorApp"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="10sp"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20sp"
            android:backgroundTint="@color/colorApp"
            android:text="Sign Up"
            app:cornerRadius="30sp" />

        <TextView
            android:id="@+id/gotoSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="-20sp"
            android:text="Already have an account!"
            android:textColor="@color/colorApp"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>